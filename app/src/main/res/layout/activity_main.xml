<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text= "Balances"
        android:layout_gravity="center"
        android:fontFamily="@font/fontmosreg"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/rounddesign"/>

        <View
            android:id="@+id/view1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:background="@drawable/rounddesignwh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="2dp"
            android:id="@+id/datalayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">



            <TextView
                android:padding="10dp"
                android:textSize="18dp"
                android:id="@+id/datatitle"
                android:layout_width="wrap_content"
                android:text="TITLE"
                android:fontFamily="@font/fontmosreg"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#c0c0c0"/>
            <TextView
                android:padding="10dp"

                android:textSize="18dp"
                android:id="@+id/datatext"
                android:layout_width="wrap_content"
                android:text="DATA"
                android:fontFamily="@font/fontmossemi"
                android:layout_height="wrap_content" />
            <View

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#c0c0c0"/>
            <TextView
                android:padding="10dp"

                android:textSize="18dp"
                android:id="@+id/datavalue"
                android:layout_width="wrap_content"
                android:text="VALUE"
                android:fontFamily="@font/fontmossemi"
                android:layout_height="wrap_content" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:visibility="gone"
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />



    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    </LinearLayout>


</RelativeLayout>